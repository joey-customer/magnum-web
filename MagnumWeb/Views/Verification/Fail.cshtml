@{
    ViewData["Title"] = "Verification Error";
}

<div class="section-spacing" style="margin-top: 100px;">
    <div class="container">
        <div class="row justify-content-center resultContainer">
            <div class="row justify-content-center" style="width: 100%">
                <div class="col-md-10 col-12 px-0 containerCard">
                    <div class="row mediaRow">
                        <div class="col-md-12 col-12 fail-bg" style="min-height: 47.94px;"></div>
                    </div>
                    <div class="row justify-content-center text-center">
                        <div class="col-md-10 col-12">
                            <h1 class="primaryTitle pt-4">Product Verification Result</h1>
                            <div class="row justify-content-center">
                                <div class="col-md-12 col-12 pr-0">
                                    <i class="fas fa-ban" style="font-size:60px; color: #e02d20" aria-hidden="true"></i> <!-- Compliant icon fonts usage -->
                                    <p class="productState pt-3" style="color: #e02d20;">@ViewBag.Message</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

