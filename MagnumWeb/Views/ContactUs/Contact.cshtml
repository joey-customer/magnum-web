@{
    ViewData["Title"] = "Contact Page";
}

<div class="contact-form section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-12 col-lg-12">
                <div class="form-area">
                    @if (ViewBag.Message != null)
                    {
                        <div class="jumbotron text-center">
                            <h1 class="display-4">Thank You!</h1>
                            <p class="lead">@ViewBag.Message</p>
                        </div>
                    }
                    <form method="post" action="/Contact/Save" name="contact" id="contact">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Action" value="Save">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6">
                                <div class="single-input-box">
                                    <label>Name</label>
                                    <input type="text" name="Name" placeholder="Your Name">
                                </div>
                                <div class="single-input-box">
                                    <label>Subject</label>
                                    <input type="text" name="Subject" placeholder="Your Subject">
                                </div>
                                <div class="single-input-box">
                                    <label>Email Address</label>
                                    <input type="text" name="Email" placeholder="Your Email Address">
                                </div>
                                <div class="g-recaptcha" data-sitekey="6LfUAckUAAAAAMDW79N3dK-F6Je8Zdv3m0LbiOwv"></div>
                            </div>
                            <div class="col-xl-6 col-lg-6">
                                <div class="single-input-box single-input-box">
                                    <label>Message</label>
                                    <textarea name="Message" placeholder="Write Your Message"></textarea>
                                </div>
                            </div>
                        </div>
                        <button>Submit</button>                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>