@{
    ViewData["Title"] = "About Page";
    String lang = "EN";
}

<section class="about-section style-two about-page-1">
    <div class="container">
        <div class="top-content">
            <div class="row">
                <div class="col-lg-5 col-md-12 col-sm-12">
                    <div>
                        <figure class="image"><img src="@ViewBag.Contents["img/About"][lang]" alt=""></figure>
                    </div>
                </div>
                <div class="col-lg-7 col-md-12 col-sm-12 content-column">
                    <div class="content-box">
                        <div class="sec-title">
                            <h4>@ViewBag.Contents["txt/About_Banner"][lang]</h4>
                            <h1>@ViewBag.Contents["txt/About_Header"][lang]</h1>
                        </div>
                        <p class="text">@ViewBag.Contents["txt/About_P1"][lang]</p>
                        <p class="text">@ViewBag.Contents["txt/About_P2"][lang]</p>
                        <p class="text">@ViewBag.Contents["txt/About_P3"][lang]</p>
                </div>
            </div>
        </div>
    </div>

    </section>

    

